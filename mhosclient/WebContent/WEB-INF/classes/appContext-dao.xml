    <bean id="dataSource" class="org.apache.commons.dbcp.BasicDataSource" destroy-method="close">
        <property name="driverClassName" value="com.mysql.jdbc.Driver" />
        
        <property name="url"
            value="jdbc:mysql://localhost:3306/mhos_main?useUnicode=true&amp;characterEncoding=UTF-8" />
        <property name="username" value="root" />
        <property name="password" value="zlf" />
        
        
        <!-- 初始化连接 -->
        <property name="initialSize">
            <value>3</value>
        </property>
        <!-- 最大空闲连接 -->
        <property name="maxIdle">
            <value>5</value>
        </property>
        <!-- 最小空闲连接 -->
        <property name="minIdle">
            <value>2</value>
        </property>
        <!-- 最大连接数量 -->
        <property name="maxActive">
            <value>10</value>
        </property>
        <!-- 多少毫秒检查一次连接池中空闲的连接(由于Mysql的wait_timeout) -->
        <property name="timeBetweenEvictionRunsMillis">
            <value>#{30 * 1000}</value>
        </property>
        <!-- 将空闲时间超过指定毫秒的连接断开,直到连接池中的连接数到minIdle为止 -->
        <property name="minEvictableIdleTimeMillis">
            <value>#{30 * 60 * 60 * 1000}</value>
        </property>
        <property name="validationQuery">
            <value>SELECT 1</value>
        </property>
        <property name="testOnBorrow">
            <value>true</value>
        </property>
    </bean>
 
    
    
