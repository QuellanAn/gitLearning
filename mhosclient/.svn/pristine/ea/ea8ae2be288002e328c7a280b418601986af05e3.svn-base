$(document).ready(function() {
	$('input[name=sq_startdate]').datepicker({ dateFormat: 'yy-mm-dd' });
	$('input[name=sq_enddate]').datepicker({ dateFormat: 'yy-mm-dd' });
	$("a.selectTime:eq(0)").click();
	
	// “增量”和“总人数”按钮的点击监听
	$("ul.nav-tabs li").click(function(){
		// 按钮样式处理
		$("ul.nav-tabs li").removeClass("active");
		$(this).addClass("active");
		
		updateChart();
	});
	
	$("#act_query").click(function(){
		updateChart();
	});
	
	// 默认显示图表
	updateChart();
});

/**
 * 更新显示的图表
 */
function updateChart(){
	var userType = $("input[name=userType]:checked").val();
	var beginDate = $("#beginDate").val();
	var endDate = $("#endDate").val();
	var countType = $("ul.nav-tabs li.active").attr("id");// increment表示增量，allCount表示总人数
	var myChart = echarts.init(document.getElementById('Section1'));
	var title = "用户增量变化趋势图";
	if(countType == "allCount"){
		title = "用户总人数变化趋势图";
	}
	var numText = "累计增加用户量";
	if(countType == "allCount"){
		numText = "今日总人数";
	}
	myChart.showLoading({
        text: '读取数据中...' // loading，是在读取数据的时候显示
    });
	$.ajax({
		type : "post",
		url : "userAmountStatisticsAction_getUserAmountCount",
		data:{"userType":userType, "beginDate":beginDate, "endDate":endDate, "countType":countType},
		dataType : "json",
		async : true,
		success : function(data) {
			var num = eval(data.num);
			$("div.divSum span.num").text(num);
			$("div.divSum span.text").text(numText);
			var rows = eval(data.list);
			var arr = [];
			var arrY = [];
			//调用函数获取值，转换成数组模式  
			for ( var i = 0; i < rows.length; i++) {
				arr.push(rows[i].countDate);
				arrY.push(rows[i].count);
			}
			option = {
				title : {
					text : title,
					x:'center',
					y:'bottom'
				},
				tooltip : {
					trigger : 'axis',
				},
				toolbox : {
					show : true,
					feature : {
						restore : {show: true},
			            saveAsImage : {show: true}
					}
				},
				xAxis : {
					type : 'category',
					boundaryGap: true,
					splitLine : {
						show : false
					},
					data : arr
				},
				grid : {
					left : '3%',
					right : '4%',
					bottom : '12%',
					containLabel : true
				},
				yAxis : {},
				series : [ {
					name : '用户量(人)',
					type : 'line',
					itemStyle : {  
                        normal : {  
                        	color:'#7CB5EC',  
                            lineStyle:{  
                                color:'#7CB5EC'  
                            }
                        }
                    },  
					data : arrY
				} ]
			};
			myChart.setOption(option);
			myChart.hideLoading();
		},error : function(errorMsg) {
	         alert("图表请求数据失败!");
	         myChart.hideLoading();
		}
	});
}

/**
 * 点击“最近7天”等设置时间区间
 */
function setSelectTime(days){
	var beginDate = getDayAdd((-1) * (days - 1));
	var endDate = getTodayDate();
	$("#beginDate").val(beginDate);
	$("#endDate").val(endDate);
}