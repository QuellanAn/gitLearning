function addAnswers(type, obj) {
	var div = $(obj).parent();
	if(type == 0 || type == 1) {
		$(div).find(".an1").show();
		$(div).find(".an2").hide();
	} else if (type == 2) {
		$(div).find(".an2").show();
		$(div).find(".an1").hide();
	}
}

function deleteQuestion(obj) {
	$(obj).parent().remove();
}
