@CHARSET "UTF-8";
.demo {
	padding: 1em 0;
}

a:hover,a:focus {
	outline: none;
	text-decoration: none;
}

.tab .nav-tabs {
	border: 1px solid #CCCCCC;
}

.tab .nav-tabs li {
	margin: 0;
}

.tab .nav-tabs li a {
	font-size: 14px;
	color: #999898;
	background: #fff;
	margin: 0;
	/* padding: 20px 25px; */
	border-radius: 0;
	border: none;
	border-right: 1px solid #ddd;
	text-transform: uppercase;
	position: relative;
}

.tab .nav-tabs li a div{
	color: black;
}
.tab .nav-tabs li a span{
	color: green;
}

.tab .nav-tabs li a:hover {
	border-top: none;
	border-bottom: none;
	border-right-color: #ddd;
}

.tab .nav-tabs li.active a,.tab .nav-tabs li.active a:hover {
	color: #fff;
	border: none;
	background: #44B549;
	border-right: 1px solid #ddd;
}

.tab .nav-tabs li.active a div,.tab .nav-tabs li.active a span{
	color: #fff;
}

