$(document).ready(function() {
	$('input[name=sq_startdate]').datepicker({ dateFormat: 'yy-mm-dd' });
	$('input[name=sq_enddate]').datepicker({ dateFormat: 'yy-mm-dd' });
	initDepartment();
	initDoctors();
	
	$("#act_query").click(function(){
		updateChart();
	});
	
	// 选择的科室变化后重新加载医生列表
	$('#departmentCode').change(function(){ 
		initDoctors();
	});
	
	// 默认显示图表
	updateChart();
});

/**
 * 更新显示的图表
 */
function updateChart(){
	updateLineChart();
	// 1表示科室挂号量变化，2表示医生挂号量变化
	var chartType = $("#chartType").val();
	if(chartType == '1'){
		// 科室挂号的饼状图
		updatePieChart();
	}
}

/**
 * 更新显示的图表(折线图)
 */
function updateLineChart(){
	var beginDate = $("#beginDate").val();
	var endDate = $("#endDate").val();
	var departmentCode = $("#departmentCode").val();
	var type = "1";// 0为预约，1为挂号
	var myChart = echarts.init(document.getElementById('Section1'));
	var title = "当日挂号变化趋势图";
	var doctorId = "";
	// 1表示科室挂号量变化，2表示医生挂号量变化
	var chartType = $("#chartType").val();
	if(chartType == '2'){
		title = "医生挂号量变化趋势图";
		doctorId = $("#doctor").val();
	}
	myChart.showLoading({
        text: '读取数据中...' // loading，是在读取数据的时候显示
    });
	$.ajax({
		type : "post",
		url : "appointmentStatisticsAction_getCountByDate",
		data:{"beginDate":beginDate, "endDate":endDate, "type":type, "departmentCode":departmentCode, "doctorId":doctorId},
		dataType : "json",
		async : true,
		success : function(data) {
			var department = data.department;
			if(chartType == '1'){
				// 前面加上科室名称
				title = department + title;
			}
			var rows = eval(data.list);
			var arr = [];
			var arrY = [];
			//调用函数获取值，转换成数组模式  
			for ( var i = 0; i < rows.length; i++) {
				arr.push(rows[i].countDate);
				arrY.push(rows[i].count);
			}
			option = {
				title : {
					text : title,
					x:'center',
					y:'bottom'
				},
				tooltip : {
					trigger : 'axis',
				},
				toolbox : {
					show : true,
					feature : {
						restore : {show: true},
			            saveAsImage : {show: true}
					}
				},
				xAxis : {
					type : 'category',
					boundaryGap: true,
					splitLine : {
						show : false
					},
					data : arr
				},
				grid : {
					left : '3%',
					right : '4%',
					bottom : '12%',
					containLabel : true
				},
				yAxis : {name : "用户量(人)"},
				series : [ {
					name : '用户量(人)',
					type : 'line',
					itemStyle : {  
                        normal : {  
                        	color:'#7CB5EC',  
                            lineStyle:{  
                                color:'#7CB5EC'  
                            }
                        }
                    },  
					data : arrY
				} ]
			};
			myChart.setOption(option);
			myChart.hideLoading();
			
//			$("#Section1").after("<div class='divDepartmentCount'><a href='#'>查看医生挂号量变化趋势</a></div>");
		},error : function(errorMsg) {
	         alert("图表请求数据失败!");
	         myChart.hideLoading();
		}
	});
}

/**
 * 更新显示的图表(饼状图)
 */
function updatePieChart(){
	var beginDate = $("#beginDate").val();
	var endDate = $("#endDate").val();
	var departmentCode = $("#departmentCode").val();
	var type = "1";// 0为预约，1为挂号
	var myChart = echarts.init(document.getElementById('Section2'));
	var title = "医生挂号量占比图";
	myChart.showLoading({
        text: '读取数据中...' // loading，是在读取数据的时候显示
    });
	$.ajax({
		type : "post",
		url : "appointmentStatisticsAction_getCountByDoctor",
		data:{"beginDate":beginDate, "endDate":endDate, "type":type, "departmentCode":departmentCode},
		dataType : "json",
		async : true,
		success : function(data) {
			var rows = eval(data.list);
			var arr = [];
			var arrY = [];
			//调用函数获取值，转换成数组模式  
			for ( var i = 0; i < rows.length; i++) {
				arr.push(rows[i].doctorName);
				arrY.push(rows[i].count);
			}
			option = {
				title : {
					text : title,
					x:'center',
					y:'bottom'
				},
				tooltip : {
					trigger: 'item',
			        formatter: "{a} <br/>{b} : {c} ({d}%)"
				},
				legend: {
			        x : 'right',
			        y : 'center',
			        width: 100,
			        height: 400,
			        data : arr
			    },
				toolbox : {
					show : true,
					feature : {
						restore : {show: true},
			            saveAsImage : {show: true}
					}
				},
				series : [ {
					name:'医生挂号量占比',
		            type:'pie',
		            radius : [0, 150],
		            center : ['50%', 200],
		            roseType : 'area',
		            itemStyle:{ 
                        normal:{
                            label:{ 
                               show: true, 
                               formatter: '{b} : {c} ({d}%)' 
                            }, 
                            labelLine :{show:true}
                        } 
                    },
		            data:(function(){  
                        var res = [];  
                        var len = arr.length;
                        if(len > 0){
                        	while (len--) {
                        		res.push({
                        			name: arr[len],  
                        			value: arrY[len]
                        		});  
                        	}
                        }else{// 时间区间内的统计数据为0
                        	res.push({
                    			name: "全部",  
                    			value: 0
                    		});
                        }
                        return res;  
                    })()
				} ]
			};
			myChart.setOption(option);
			myChart.hideLoading();
		},error : function(errorMsg) {
	         alert("图表请求数据失败!");
	         myChart.hideLoading();
		}
	});
}

/**
 * 初始化科室列表
 */
function initDepartment(){
	var sel = $('#departmentCode');
	sel.empty();
	$.ajax({  
         type : "post",  
         url : "config/department/findAllDeptment",
         data : {},  
         async : false,  
         success : function(data){  
        	var obj=eval('('+data+')');
     		var jarr = obj.depts;
     		for (var i in jarr){
     			var o = $('<option></option>').val(jarr[i].departmentId).html(jarr[i].departmentName);
     			sel.append(o.get());
     		}
         }
    }); 
	
	// 选中指定的科室
	var departmentId = $("#departmentId").val();
	if(departmentId != ''){
		$('#departmentCode').val(departmentId);
	}
};

/**
 * 初始化医生列表
 */
function initDoctors(){
	// 1表示科室挂号量变化，2表示医生挂号量变化
	var chartType = $("#chartType").val();
	if(chartType == '2'){
		var sel = $('#doctor');
		var departmentCode = $("#departmentCode").val();
		sel.empty();
		$.ajax({  
			type : "post",  
	         url : "appointmentStatisticsAction_getDoctorsByDepartmentId",
	         data : {"departmentCode":departmentCode},  
	         async : false,  
	         success : function(data){  
	        	var jarr = eval(data);
	     		for (var i in jarr){
	     			var o = $('<option></option>').val(jarr[i].code).html(jarr[i].doctorName);
	     			sel.append(o.get());
	     		}
	         }  
	    });
	}
}

/**
 * 点击“最近7天”等设置时间区间
 */
function setSelectTime(days){
	var beginDate = getDayAdd((-1) * (days - 1));
	var endDate = getTodayDate();
	$("#beginDate").val(beginDate);
	$("#endDate").val(endDate);
}

/**
 * 跳转到医生挂号量变化趋势页面
 */
function toDoctorChange(){
	var beginDate = $("#beginDate").val();
	var endDate = $("#endDate").val();
	var departmentCode = $("#departmentCode").val();
	window.location.href="appointmentStatisticsAction_toDepartmentChange?beginDate=" + beginDate + "&endDate=" + endDate + "&chartType=2&type=1&departmentCode=" + departmentCode; 
}